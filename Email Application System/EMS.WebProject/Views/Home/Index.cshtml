@{
    ViewData["Title"] = "Home Page";
}


@if (User.Identity.IsAuthenticated)
{
    @if (User.FindFirst("IsPasswordChanged").Value == "False")
    {
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h2 class="text-center">Welcome</h2>
                <h3 class="text-center">This is your first login!</h3>
                <hr />
                <h5 class="font-italic font-weight-lighter text-center">You have to change your password first</h5>
                <div class="text-center">
                    <a class="btn btn-info text-center mt-3" asp-area="" asp-controller="User" asp-action="ChangePassword">Change your password</a>
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
    }
}

