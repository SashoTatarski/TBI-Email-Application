@model AppPreviewViewModel

<div class="form-group">
    <label for="exampleFormControlInput1"><b>Name:</b></label>
    <p>@Model.Name</p>
</div>

<div class="form-group">
    <label for="exampleFormControlInput1"><b>EGN:</b></label>
    <p>@Model.EGN</p>
</div>

<div class="form-group">
    <label for="exampleFormControlInput1"><b>Phone:</b></label>
    <p>@Model.Phone</p>
</div>


@if ((Model.OperatorName == User.Identity.Name || User.IsInRole(Constants.Manager)) && Model.Status == ApplicationStatus.NotReviewed)
{
    <a class="btn btn-info" asp-controller="App" asp-action="Approve" asp-route-id="@Model.Id">Approve</a>
    <a class="btn btn-info" asp-controller="App" asp-action="Reject" asp-route-id="@Model.Id">Reject</a>
}
else if (Model.Status != ApplicationStatus.NotReviewed && User.IsInRole(Constants.Manager))
{
    <a class="btn btn-info" asp-controller="App" asp-action="MarkAppNew" asp-route-id="@Model.Id">Mark new</a>
}


@{var referrer = this.Context.Request.Headers[Constants.HeaderReferer]; }

@if (referrer != default(StringValues))
{
    <a href="@referrer.ToString()" class="btn btn-outline-dark">Back</a>
}

