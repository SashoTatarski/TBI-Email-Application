@model ChangePasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
}

<div class="row">
    <div class="col-3"></div>

    <div class="mt-5 mb-5 ml-5 mr-5 col-6" style="background-color: #f8f9fa; box-shadow: 0 6px 10px 2px grey; border-radius: 10px">
        <div class="container pt-4 pb-4 pl-4 pr-4">
            <div class="ml-4 mr-4">
                <h3 class="text-center mb-4" style="letter-spacing: 0.07rem; padding: 0.75rem 1rem; color: #383d41">Change password</h3>
                @if (TempData["error"] != null)
                {
                    <div class="text-danger text-center">@TempData["error"]</div>
                }
                <form asp-action="ChangePassword" asp-controller="User" method="post">
                    <div class="mt-5">
                        <div class="md-form input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text md-addon font-weight-bold text-center" id="inputGroupMaterial-sizing-default" style="width: 200px;
                             border-top-left-radius: 10px;
                             border-bottom-left-radius: 10px;
                            background-color: #dee2e6;">New password</span>
                            </div>
                            <input asp-for="@Model.Password type=" text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroupMaterial-sizing-default">
                            <span asp-validation-for="Password" class="text-danger">  </span>
                        </div>

                        <div class="md-form input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text md-addon font-weight-bold text-center" id="inputGroupMaterial-sizing-default" style="width: 200px;
                             border-top-left-radius: 10px;
                             border-bottom-left-radius: 10px;
                            background-color: #dee2e6;">Repeat new password</span>
                            </div>
                            <input asp-for="@Model.ConfirmPassword type=" text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroupMaterial-sizing-default">
                            <span asp-validation-for="ConfirmPassword" class="text-danger">  </span>
                        </div>

                        <div class="md-form input-group mb-3 pt-4">

                            <p class="mb-1">You have to confirm the change with your current password</p>

                            <div class="input-group-prepend">
                                <span class="input-group-text md-addon font-weight-bold text-center" id="inputGroupMaterial-sizing-default" style="width: 250px;
                             border-top-left-radius: 10px;
                             border-bottom-left-radius: 10px;
                             background-color: #dee2e6;">Current password</span>
                            </div>
                            <input asp-for="@Model.CurrentPassword type=" text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroupMaterial-sizing-default">
                            <span asp-validation-for="CurrentPassword" class="text-danger">  </span>

                        </div>
                    </div>

                    <div class="pt-5 pb-3">
                        <button type="submit" class="btn"
                                style="width: 100%;
                         height: 50px;
                         font-size: 1rem;
                         letter-spacing: 0.05rem;
                         padding: 0.75rem 1rem;
                         border-radius: 2rem;
                         background-color: #E67122;
                         border-color: #E67122;
                         color: white;">
                            Change
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-3"></div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}