@model ChangePasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
}

<h1>ChangePassword</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePassword" asp-controller="User" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Password">New password</label>
                <input asp-for="@Model.Password" class="form-control" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ConfirmPassword">Repeat new password</label>
                <input asp-for="@Model.ConfirmPassword" class="form-control" />
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.CurrentPassword">Confirm with your password</label>
                <input asp-for="@Model.CurrentPassword" class="form-control" />
                <span asp-validation-for="@Model.CurrentPassword" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="@Model.Username" value="@User.Identity.Name" class="form-control" />
            <button type="submit" class="btn btn-info">Change password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}