@model ChangePasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
}

<div class="row">
    <div class="col-md-3"> </div>
    <div class="col-md-6">
        <h2>Change Password</h2>
        @if (TempData["error"] != null)
        {
            <div class="text-danger">@TempData["error"]</div>
        }
        <form asp-action="ChangePassword" asp-controller="User" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Password">New password</label>
                <input asp-for="@Model.Password" class="form-control" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ConfirmPassword">Repeat new password</label>
                <input asp-for="@Model.ConfirmPassword" class="form-control" />
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>
            <p class="mt-5 font-italic font-weight-bold">You have to confirm the new password with your current one</p>
            <div class="form-group">
                <label asp-for="@Model.CurrentPassword">Confirm with your password</label>
                <input asp-for="@Model.CurrentPassword" class="form-control" />
                <span asp-validation-for="@Model.CurrentPassword" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="@Model.Username" value="@User.Identity.Name" class="form-control" />
            <div class="text-center">
                <button type="submit" class="btn btn-info">Change password</button>
            </div>
        </form>
    </div>
    <div class="col-md-3"> </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}